@model Entities.Concrete.User

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Register Now</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">User Name</label>

                            @Html.TextBoxFor(x => x.UserName, new {@class="form-control"})
                            @Html.ValidationMessageFor(x => x.UserName, "", new {@class="text-danger"})
                            @*<input type="text" class="form-control" id="validationDefault01" placeholder="" required="" name="UserName">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-Mail Address</label>
                            @Html.TextBoxFor(x => x.UserEmail, new {@class="form-control"})
                            @Html.ValidationMessageFor(x => x.UserEmail, "", new {@class="text-danger"})
                            @*<input type="email" class="form-control" id="validationDefault02" placeholder="" required="" name="UserEmail">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            @Html.TextBoxFor(x => x.UserPassword, new {@class="form-control"})
                            @Html.ValidationMessageFor(x => x.UserPassword, "", new {@class="text-danger"})
                            @*<input type="password" class="form-control" id="password1" placeholder="" required="" name="UserPassword">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Confirm Password</label>
                            <input type="password" class="form-control" id="password2" placeholder="" required="" name="confirmPassword">
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4" id="registerBtn">Register</button>
                    <p>
                        <a href="#" id="btn1">By clicking "Register", you agree to the terms of use.</a>
                    </p>

                }
            </div>
        </div>
    </div>
    <br />
    <script>
        let btn = document.querySelector("#btn1")
        let registerBtn = document.querySelector("#registerBtn")
        let password = document.querySelector("password1")
        let confirmPassword = document.querySelector("password2")

        if (password !== confirmPassword) {
            event.preventDefault();
            swal('Passwords do not match.');
        }

        btn.addEventListener("click", (e) => {
            e.preventDefault()
            swal("User Agreement", "When you register on our site,\n\nYou agree to receive information and news e-mails via the e-mail address you provided.\n\nIf you want to unsubscribe from the e-mail newsletter, you can pause the e-mail conversation.\n\nIf you share your personal data with third parties, it is your responsibility to lose your account.\n\n")
        })

        let
    </script>
</section>
